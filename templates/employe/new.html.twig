{# ajout d'un employe  #}

{% extends 'base.html.twig' %}

{% block title %}Ajout d'une employé{% endblock %}

{% block body %}

    {# s'il recoit edit alors c'est une modification #}
    {% if edit %}
        <h1>Modifier l'employé</h1>
        
    {% else %}
        <h1>Ajouter un employé</h1>
    {% endif %}

    {# recupere le formulaire automatiquement  #}
    {# {{ form(formAddEmploye) }} #}

    {# possibilité de detailler #}
    {# rappel qu'on lit implicitement formAddEmploye->get...()  #}

    {{ form_start(formAddEmploye) }}
    <div class="row">
        <div class="col-sm">
            {{ form_row(formAddEmploye.nom) }}
        </div>
        <div class="col-sm">
            {{ form_row(formAddEmploye.prenom) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            {{ form_row(formAddEmploye.dateNaissance) }}
        </div>
        <div class="col-sm">
            {{ form_row(formAddEmploye.dateEmbauche) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            {{ form_row(formAddEmploye.entreprise) }}
        </div>
        <div class="col-sm">
            {{ form_row(formAddEmploye.ville) }}
        </div>
    </div>
        {{ form_row(formAddEmploye.Valider) }}
    {{ form_end(formAddEmploye) }}

{% endblock %}